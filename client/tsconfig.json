  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "strict": true,
    "removeComments": true,
    "outDir": "../dist",
  },
}
